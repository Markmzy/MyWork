<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.markmzy.mywork.wx.dao.TbFaceModelMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.markmzy.mywork.wx.model.TbFaceModel">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="face_model" property="faceModel"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, face_model
    </sql>

    <select id="searchFaceModel" parameterType="int" resultType="java.lang.String">
        SELECT face_model
        FROM tb_face_model
        WHERE user_id = #{userId}
    </select>

    <insert id="insertFaceModel" parameterType="com.markmzy.mywork.wx.model.TbFaceModel">
        INSERT INTO tb_face_model
        SET user_id= #{userId},
            face_model=#{faceModel};
    </insert>

    <delete id="deleteFaceModel" parameterType="int">
        DELETE
        FROM tb_face_model
        WHERE user_id = #{userId}
    </delete>

</mapper>